<script src="https://cdn.jsdelivr.net/npm/@emailjs/browser@3/dist/email.min.js" is:inline></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script is:inline>
  emailjs.init("0MMKLImKrZYISoB9J");

  document.addEventListener("DOMContentLoaded", () => {
    const form = document.getElementById("demoForm");
    if (!form) {
      console.error("No se encontró el formulario con id 'demoForm'");
      return;
    }

    form.addEventListener("submit", function (event) {
      event.preventDefault();

      emailjs
        .sendForm("service_bjq8z7q", "template_nzaujs6", this)
        .then(() => {
          return emailjs.send("service_bjq8z7q", "template_fn1sh1j", {
            email: this.email.value,
            nombre: this.nombre.value,
          });
        })
        .then(() => {
          Swal.fire({
            icon: 'success',
            title: 'Gracias',
            text: 'Gracias por comunicarte con nosotros. Revisa tu correo para más información.',
            confirmButtonText: 'Aceptar'
          });
          form.reset();
        })
        .catch((error) => {
          console.error("Error al enviar el formulario:", error);
          Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: 'Error al enviar la solicitud. Por favor, inténtalo más tarde.',
            confirmButtonText: 'Aceptar'
          });
        });
    });
  });
</script>
