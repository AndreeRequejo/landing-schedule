<section id="beneficios" class="py-20 px-6 text-center bg-gray-50">
  <h2 class="text-3xl font-bold mb-6">
    Características diseñadas para instituciones educativas
  </h2>
  <p class="text-gray-600 mb-12 max-w-2xl mx-auto">
    Todas las herramientas que necesitas para generar y gestionar horarios de
    forma eficiente, ahorrando tiempo y recursos valiosos.
  </p>

  <!-- Características -->
  <div
    class="bg-white rounded-2xl shadow-md p-6 md:p-10 flex flex-col md:flex-row justify-between items-center gap-6"
  >
    <!-- Característica 1 -->
    <div class="flex-1 flex flex-col items-center text-center px-4">
      <img
        src="/images/Automatiza.png"
        alt="Automatiza la creación de horarios"
        class="h-28 mb-4 object-contain"
      />
      <p class="font-semibold">Automatiza la creación de horarios</p>
    </div>

    <!-- Separador -->
    <div class="hidden md:block w-px bg-gray-300 h-24 mx-2"></div>

    <!-- Característica 2 -->
    <div class="flex-1 flex flex-col items-center text-center px-4">
      <img
        src="/images/Horarios.png"
        alt="Elimina las horas invertidas en cuadrar los horarios"
        class="h-28 mb-4 object-contain"
      />
      <p class="font-semibold">
        Elimina las horas invertidas en cuadrar los horarios
      </p>
    </div>

    <!-- Separador -->
    <div class="hidden md:block w-px bg-gray-300 h-24 mx-2"></div>

    <!-- Característica 3 -->
    <div class="flex-1 flex flex-col items-center text-center px-4">
      <img
        src="/images/Ajustes.png"
        alt="Realiza cambios de manera fácil"
        class="h-28 mb-4 object-contain"
      />
      <p class="font-semibold">Realiza cambios de manera fácil</p>
    </div>

    <!-- Separador -->
    <div class="hidden md:block w-px bg-gray-300 h-24 mx-2"></div>

    <!-- Característica 4 -->
    <div class="flex-1 flex flex-col items-center text-center px-4">
      <img
        src="/images/Comparte.png"
        alt="Visualiza los horarios por grupos, docentes y espacios"
        class="h-28 mb-4 object-contain"
      />
      <p class="font-semibold">
        Visualiza los horarios por grupos, docentes y espacios
      </p>
    </div>
  </div>
</section>
